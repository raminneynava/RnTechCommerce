@model List<InventoryManagement.Application.Contract.Inventory.InventoryOperationViewModel>

@{

}
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-12">
                    <table id="operationlog" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                        >
                        <thead>
                            <tr>
                                <th># </th>
                                <th>تعداد</th>
                                <th>تاریخ</th>
                                <th>موجودی فعلی</th>
                                <th>توسط</th>
                                <th>توضیحات</th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = 0;
                            }
                            @foreach (var item in Model)
                            {
                                counter++;
                                <tr class="text-white @(item.Operation?"bg-success":"bg-danger")">
                                    <td>@counter</td>
                                    <td>@item.Count</td>
                                    <td>@item.OperationDate.ToString("dd.MM.yyyy")</td>
                                    <td>@item.CurrentCount</td>
                                    <td>@item.Operator</td>
                                    <td>@item.Description</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <button type="button" class="btn btn-danger waves-effect waves-light" data-dismiss="modal">بستن</button>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#operationlog').DataTable({

            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Persian.json"
            },
            "ordering": false
        });
    });
</script>
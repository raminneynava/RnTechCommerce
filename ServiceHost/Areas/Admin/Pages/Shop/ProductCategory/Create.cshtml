@model ShopManagement.Application.Contracts.ProductCategory.CreateProductCategory

@{

}
<form asp-page="./Index" asp-page-handler="Create" method="post" data-ajax="true" data-callback="" data-action="Refresh">
    <div class="modal-header">
        <h5 class="modal-title" id="myExtraLargeModalLabel">افزودن دسته بندی محصول</h5>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Name">نام</label>
                    <input type="text" class="form-control" asp-for="Name" onchange="makeSlug('Name','Slug')">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Description">توضیحات</label>
                    <textarea class="form-control" asp-for="Description" onchange="fillField('Description','MetaDescript')"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Picture">تصویر</label>
                    <input type="text" class="form-control" asp-for="Picture">
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="PictureAlt">متن تصویر</label>
                    <input type="text" class="form-control" asp-for="PictureAlt">
                    <span asp-validation-for="PictureAlt" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="PictureTitle">عنوان تصویر</label>
                    <input type="text" class="form-control" asp-for="PictureTitle">
                    <span asp-validation-for="PictureTitle" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Keyword">کلمات کلیدی</label>
                    <input type="text" class="form-control" asp-for="Keyword">
                    <span asp-validation-for="Keyword" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Slug">آدرس صفحه</label>
                    <input type="text" class="form-control" asp-for="Slug">
                    <span asp-validation-for="Slug" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="MetaDescript">توضیحات متا</label>
                    <textarea class="form-control" asp-for="MetaDescript"></textarea>
                    <span asp-validation-for="MetaDescript" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">

                    <button type="submit" class="btn btn-success waves-effect waves-light">ذخیره</button>
                    <button type="button" class="btn btn-danger waves-effect waves-light" data-dismiss="modal">لغو</button>
                </div>
            </div>
        </div>

    </div>

</form>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $.validator.setDefaults({
            ignore: ""
        });
    </script>

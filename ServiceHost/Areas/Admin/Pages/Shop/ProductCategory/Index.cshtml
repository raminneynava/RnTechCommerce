@page
@model ServiceHost.Areas.Admin.Pages.Shop.ProductCategory.IndexModel
@{
}

@section Style{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
}
    <!-- Start Content-->
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title">Datatable</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb p-0 m-0">
                            <li class="breadcrumb-item"><a href="#">Moltran</a></li>
                            <li class="breadcrumb-item"><a href="#">table</a></li>
                            <li class="breadcrumb-item active">Datatable</li>
                        </ol>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <!-- end page title -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">جستجو</h3>
                    </div>
                    <div class="card-body">
                        <form class="form-inline" method="get" role="form">
                            <div class="col-sm-3">
                                <input type="text" asp-for="Search.Name" class="form-control" placeholder="گروه">
                            </div>
                            <div class="col-sm-2">
                                <input type="date" asp-for="Search.CreationDate" class="form-control" id="inputEmail3" placeholder="تاریخ">
                            </div>
                            <div class="col-sm-3">
                                <button type="submit" class="btn btn-purple waves-effect waves-light"> <span>جستجو</span> <i class="fas fa-search-location"></i> </button>
                                <a href="/admin/shop/productcategory" class="btn btn-info waves-effect waves-light width-md">مشاهده همه</a>
                            </div>
                        </form>
                    </div>
                    <!-- card-body -->
                </div>
                <!-- card -->
            </div>
            <!-- col -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="col-sm-3">
                            <button onclick="CreateModal()" class="btn btn-success waves-effect waves-light">جدید +</button>
                            @*                            <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Create")">ایجاد گروه محصول جدید</a>
                        *@
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-12">
                                <table id="table_id" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                                    >
                                    <thead>
                                        <tr>
                                            <th>نام </th>
                                            <th>وضعیت</th>
                                            <th>عملیات</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.productCategories)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@item.CreationDate</td>
                                            <td>
                                                <button onclick="EditModal(@item.Id)" type="button" class="btn btn-warning waves-effect waves-light btn-sm"> <i class="fas fa-edit"></i> <span>ویرایش</span> </button>
                                                <button type="button" class="btn btn-danger waves-effect waves-light btn-sm">حذف</button>
                                            </td>

                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>


        </div>

    </div>
    <!-- end container-fluid -->
    @section Scripts{
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
        <script>
            $(document).ready(function() {
                $('#table_id').DataTable({

                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Persian.json"
                    },
                    "ordering": false
                });
            });
            function CreateModal() {
                $("#modalcontent").load('@Url.Page("./Index", "Create")');
                $("#MainModal").modal("show");
            }
            function EditModal(v) {
                //let url = '@Url.Page("./Index", "Edit")';
                //$("#modalcontent").load(url, { id: v });
                //$("#MainModal").modal("show");
                $.ajax({
                    url: "@Url.Page("./Index")?handler=Edit",
                    method: "GET",
                    data: { id: v },
                    success: function(data) {
                        $("#modalcontent").html(data);
                        $("#MainModal").modal("show");
                    }
                })
            }
        </script>


    }

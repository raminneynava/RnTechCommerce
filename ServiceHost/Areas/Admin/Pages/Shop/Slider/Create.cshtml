@model ShopManagement.Application.Contracts.Slider.CreateSlider

<form asp-page="./Index" asp-page-handler="Create" method="post" data-ajax="true" data-callback="" data-action="Refresh">
    <div class="modal-header">
        <h5 class="modal-title" id="myExtraLargeModalLabel">افزودن اسلایدر</h5>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Name">نام</label>
                    <input type="text" class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="TitleOne">عنوان اول</label>
                        <input type="text" class="form-control" asp-for="TitleOne">
                    <span asp-validation-for="TitleOne" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="TitleTwo">عنوان دوم</label>
                    <input type="text" class="form-control" asp-for="TitleTwo">
                    <span asp-validation-for="TitleTwo" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Order">ترتیب نمایش</label>
                    <input class="form-control" asp-for="Order">
                    <span asp-validation-for="Order" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Picture">تصویر</label>
                    <input type="text" class="form-control" asp-for="Picture">
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="PictureAlt">متن تصویر</label>
                    <input type="text" class="form-control" asp-for="PictureAlt">
                    <span asp-validation-for="PictureAlt" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="PictureTitle">عنوان تصویر</label>
                    <input type="text" class="form-control" asp-for="PictureTitle">
                    <span asp-validation-for="PictureTitle" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">

                    <button type="submit" class="btn btn-success waves-effect waves-light">ذخیره</button>
                    <button type="button" class="btn btn-danger waves-effect waves-light" data-dismiss="modal">لغو</button>
                </div>
            </div>
        </div>

    </div>

</form>
@await Html.PartialAsync("_ValidationScriptsPartial")
